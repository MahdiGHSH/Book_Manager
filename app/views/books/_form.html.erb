<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="control-group">
    <%= form.label :subject_id %>
    <%= collection_select(:book, :subject_id, Subject.all, :id, :name, {}, {:multiple => false})%>
  </div>

  <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div class="form-group">
    <%= form.label :publish_date %>
    <%= form.date_select :publish_date %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

<!--start of  picture form -->
  <div class="form-group">
    <%if book.image.attached? %>
    <%= image_tag book.image, style: "width: 200px; display: block" %>
    <%end %>

    <%= form.label :image %>
    <%= form.file_field :image, class: "form-control" %>
  </div>
<!--End of  picture form -->

  <div class="form-group">
    <%= form.submit controller.action_name.capitalize + "Book", class: "btn btn-primary" %>
  </div>
<% end %>